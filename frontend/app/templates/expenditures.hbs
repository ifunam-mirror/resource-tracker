<h3>{{t 'expenditure.other'}}</h3>
<table class="table table-striped table-condensed table-hover table-bordered">
  <thead>
    <tr>
      <th>{{t 'expenditure.key' }}</th>
      <th>{{t 'expenditure.motive' }}</th>
      <th>{{t 'expenditure.date' }}</th>
      <th>{{t 'expenditure.status' }}</th>
      <th class="numeric">{{t 'expenditure.amount' }}</th>
    </tr>
  </thead>
  <tbody>
    {{#each expenditure in expenditures}}
    <tr>
      <td>{{expenditure.key}}</td>
      <td>{{expenditure.motive}}</td>
      <td>{{formatted-date expenditure.date}}</td>
      <td>{{expenditure.status}}</td>
      <td class="numeric">{{expenditure.amount}}</td>
    </tr>
    {{/each}}
  </tbody>
  {{#if meta}}
  <tfoot>
    <tr>
      <td class="bold" colspan="3">Total</td>
      <td class="numeric" colspan="2">{{meta.total.amount}}</td>
    </tr>
  </tfoot>
  {{/if}}
</table>
