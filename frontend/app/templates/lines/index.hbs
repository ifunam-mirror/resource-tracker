<h3>{{t 'line.others'}}</h3>
<table class="table table-condensed table-hover table-stripped table-bordered">
  <thead>
    <tr>
      <th>{{t 'line.key' }}</th>
      <th>{{t 'line.name' }}</th>
      <th>{{t 'line.deposited_budget' }}</th>
      <th>{{t 'line.committed_budget' }}</th>
      <th>{{t 'line.spent_budget' }}</th>
    </tr>
  </thead>
  <tbody>
    {{#each line in lines}}
      <tr>
        {{#if line.has_expenditures}}
          <td>{{link-to line.key 'lines.show' line}}</td>
        {{else}}
          <td>{{line.key}}</td>
        {{/if}}
        <td>{{line.name}}</td>
        <td>{{line.deposited_budget}}</td>
        <td>{{line.committed_budget}}</td>
        <td>{{line.spent_budget}}</td>
      </tr>
    {{/each}}
  </tbody>
 </table>
