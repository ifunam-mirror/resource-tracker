<h3>{{t 'expenditure.other'}}</h3>
<div class="box box-with-radius">
  <table class="table table-striped table-condensed table-hover">
    <thead>
      <tr>
        <th>{{t 'expenditure.id' }}</th>
        <th>{{t 'expenditure.motive' }}</th>
        <th>{{t 'expenditure.date' }}</th>
        <th>{{t 'expenditure.amount' }}</th>
        <th>{{t 'expenditure.status' }}</th>
      </tr>
    </thead>
    <tbody>
      {{#each expenditure in expenditures}}
      <tr>
        <td>{{expenditure.id}}</td>
        <td>{{expenditure.motive}}</td>
        <td>{{formatted-date expenditure.date}}</td>
        <td>{{expenditure.amount}}</td>
        <td>{{expenditure.status}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
