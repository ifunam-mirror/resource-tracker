<h3>{{t 'project.others'}} - Ejercicio {{ current-year }}</h3>
<table class="table table-striped table-condensed table-hover table-bordered">
  <thead>
    <tr>
      <th>{{t 'project.key' }}</th>
      <th>{{t 'project.financing_source' }}</th>
      <th>{{t 'project.name' }}</th>
      <th>{{t 'project.sponsor_abbrev' }}</th>
      <th>{{t 'project.start_date' }}</th>
      <th>{{t 'project.end_date' }}</th>
      <th class="numeric">{{t 'project.authorized_budget' }}</th>
      <th class="numeric">{{t 'project.deposited_budget' }}</th>
      <th class="numeric">{{t 'project.committed_budget' }}</th>
      <th class="numeric">{{t 'project.spent_budget' }}</th>
      <th class="numeric">{{t 'project.balance' }}</th>
    </tr>
  </thead>
  <tbody>
    {{#each}}
    <tr>
      <td>{{link-to key 'projects.show' this}}</td>
      <td>{{financing_source}}</td>
      <td>{{name}}</td>
      <td>{{sponsor_abbrev}}</td>
      <td>{{formatted-date start_date}}</td>
      <td>{{formatted-date end_date}}</td>
      <td class="numeric">{{authorized_budget}}</td>
      <td class="numeric">{{deposited_budget}}</td>
      <td class="numeric">{{committed_budget}}</td>
      <td class="numeric">{{spent_budget}}</td>
      <td class="numeric">{{balance}}</td>
    </tr>
    {{/each}}
  </tbody>
  <tfoot>
    <tr>
      <td class="bold" colspan="6">Total</td>
      <td class="numeric">{{meta.total.authorized_budget}}</td>
      <td class="numeric">{{meta.total.deposited_budget}}</td>
      <td class="numeric">{{meta.total.committed_budget}}</td>
      <td class="numeric">{{meta.total.spent_budget}}</td>
      <td class="numeric">{{meta.total.balance}}</td>
    </tr>
  </tfoot>
</table>
