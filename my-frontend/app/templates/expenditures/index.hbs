<table class="table table-condensed table-hover table-stripped table-bordered">
  <thead>
    <tr>
      <th>{{t 'expenditure.date' }}</th>
      <th>{{t 'expenditure.motive' }}</th>
      <th>{{t 'expenditure.amount' }}</th>
      <th>{{t 'expenditure.condition' }}</th>
    </tr>
  </thead>
  <tbody>
    {{#each expenditure in expenditures}}
      <tr>
        <td>{{expenditure.date}}</td>
        <td>{{expenditure.motive}}</td>
        <td>{{expenditure.amount}}</td>
        <td>{{expenditure.condition}}</td>
      </tr>
    {{/each}}
  </tbody>
 </table>
